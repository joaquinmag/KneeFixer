package rules;
import sintomas.*;
import lesiones.*;

global Lesion lesion

rule "DolorMuyAlto"
no-loop true
        when
               	sintoma:Dolor(valor==Sintoma.Valor.MUYALTO)
        then 
                #actions
				lesion.agregarNivelLesion(Lesion.TipoLesion.LCAP);
				lesion.setDolor(sintoma);
end

rule "DolorAlto"
no-loop true
        when
               	sintoma:Dolor(valor==Sintoma.Valor.ALTO)
        then 
                #actions
                lesion.agregarNivelLesion(Lesion.TipoLesion.LCA);
        		lesion.agregarNivelLesion(Lesion.TipoLesion.LCP);
        		lesion.agregarNivelLesion(Lesion.TipoLesion.MENISCOS);
        		lesion.agregarNivelLesion(Lesion.TipoLesion.TENDINITIS);
        		lesion.setDolor(sintoma);
end

